{
  "name": "readability-scores",
  "version": "1.0.8",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js"
  },
  "typesVersions": {
    "*": {
      "index.d.ts": [
        "dist/index.d.ts"
      ]
    }
  },
  "type": "module",
  "description": "Tests the readability of a string using multiple formulas",
  "license": "MIT",
  "keywords": [
    "automated",
    "readability",
    "coleman",
    "liau",
    "dale",
    "chall",
    "flesch",
    "kincaid",
    "gunning",
    "fog",
    "smog",
    "spache",
    "formula",
    "index"
  ],
  "repository": "MichaelChambers/readability-scores",
  "bugs": "https://github.com/MichaelChambers/readability-scores/issues",
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/wooorm"
  },
  "author": "Michael Chambers <chamicr@gmail.com>",
  "contributors": [
    "Michael Chambers <chamicr@gmail.com>",
    "Titus Wormer <tituswormer@gmail.com> (https://wooorm.com)"
  ],
  "files": [
    "dist/index.js",
    "dist/index.d.ts"
  ],
  "dependencies": {
    "automated-readability": "^2.0.0",
    "coleman-liau": "^2.0.0",
    "dale-chall": "^2.0.0",
    "dale-chall-formula": "^2.0.0",
    "flesch": "^2.0.0",
    "flesch-kincaid": "^2.0.0",
    "global": "^4.4.0",
    "gunning-fog": "^2.0.0",
    "nlcst-normalize": "^3.1.0",
    "nlcst-to-string": "^3.1.0",
    "retext-english": "^4.1.0",
    "smog-formula": "^2.0.0",
    "spache": "^2.0.0",
    "spache-formula": "^2.0.0",
    "stemmer": "^2.0.0",
    "syllable": "^5.0.0",
    "unified": "^10.1.2",
    "unist-util-visit": "^4.1.0"
  },
  "devDependencies": {
    "@types/tape": "^4.0.0",
    "c8": "^7.0.0",
    "prettier": "^2.0.5",
    "remark-cli": "^9.0.0",
    "remark-preset-wooorm": "^8.0.0",
    "rimraf": "^3.0.0",
    "tape": "^5.0.0",
    "tinyify": "^2.5.2",
    "typescript": "^4.0.0",
    "xo": "^0.38.0"
  },
  "scripts": {
    "build": "rimraf dist && tsc",
    "format": "remark . -qfo && prettier . -w --loglevel warn && xo --fix",
    "test-api": "npm run build && node dist/test.js",
    "test-coverage": "c8 --check-coverage --branches 100 --functions 100 --lines 100 --statements 100 --reporter lcov node dist/test.js",
    "test": "npm run format && npm run test-coverage"
  },
  "prettier": {
    "tabWidth": 2,
    "useTabs": false,
    "singleQuote": true,
    "bracketSpacing": false,
    "semi": false,
    "trailingComma": "none"
  },
  "xo": {
    "prettier": true,
    "rules": {
      "unicorn/no-for-loop": "off",
      "unicorn/prefer-includes": "off"
    }
  },
  "remarkConfig": {
    "plugins": [
      "preset-wooorm"
    ]
  }
}
